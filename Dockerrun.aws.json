{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions" : [
		{
			"name": "client",
			"image": "sidsharm8/multi-client",
			"hostname": "client",
			"essential": false			
		},
		{
			"name": "server",
			"image": "sidsharm8/multi-server",
			"hostname": "api",
			"essential": false			
		},
		{
			"name": "worker",
			"image": "sidsharm8/multi-worker",
			"hostname": "worker",
			"essential": false		
		},
		{
			"name": "nginx",
			"image": "sidsharm8/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"portMappings" : [
				{
					"hostPort" : 80,
					"containerPort" : 80
				}
			],
			"links" : ["client", "server"]			
		}
	]
}